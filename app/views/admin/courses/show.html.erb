<%= content_for :title_h1, title_h1_helper([@course.name])%>
<%= content_for :breadcrumb, breadcrumb_helper([['Courses', admin_courses_path], @course.name])%>
<div class="row">
  <div class="col-md-12 mb-4">
  <p><%= @course.description%></p>  
  <hr>
  <%= link_to icon('fas', 'pencil-alt') + " Edit Course", edit_admin_course_path(@course), class: "btn btn-primary"%>
  <%= link_to icon('fas', 'trash') + " Delete Course", admin_course_path(@course), method: :delete, data: {confirm: "Are you sure you want to delete the course"}, class: "btn btn-danger"%>
  </div>
</div>
